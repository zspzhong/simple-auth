{
  "initial": "initial/index",
  "serviceList": [
    {
      "name": "register",
      "path": "/register",
      "realizeFile": "auth",
      "realizeFunction": "register",
      "method": "post",
      "comment": "注册",
      "body": {
        "username": "string|required",
        "password": "string|required"
      },
      "res": {
        "code": "number",
        "result": {
          "accountId": "string"
        }
      }
    },
    {
      "name": "login",
      "path": "/login",
      "realizeFile": "auth",
      "realizeFunction": "login",
      "method": "post",
      "comment": "登录",
      "body": {
        "username": "string|required",
        "password": "string|required",
        "duration": "number|default: 3600 * 24 * 30"
      },
      "res": {
        "code": "number",
        "result": {
          "accountId": "string",
          "expireTime": "number",
          "token": "string",
          "isTemporary": "boolean"
        }
      },
      "bodyComment": {
        "duration": "单位秒"
      }
    },
    {
      "name": "temporaryLogin",
      "path": "/temporary/login",
      "realizeFile": "auth",
      "realizeFunction": "temporaryLogin",
      "method": "post",
      "comment": "临时登录, 不需要密码",
      "body": {
        "username": "string|required",
        "duration": "number|default: 3600 * 24 * 30"
      },
      "res": {
        "code": "number",
        "result": {
          "accountId": "string",
          "expireTime": "number",
          "token": "string",
          "isTemporary": "boolean"
        }
      },
      "bodyComment": {
        "username": "临时登录时, 该值只是一个唯一标志, 不一定是可用的用户名",
        "duration": "单位秒"
      }
    },
    {
      "name": "logout",
      "path": "/logout",
      "realizeFile": "auth",
      "realizeFunction": "logout",
      "method": "post",
      "comment": "登出",
      "body": {
        "token": "string|required"
      },
      "res": {
        "code": "number",
        "result": {}
      },
      "bodyComment": {
        "token": "登录流程获取的token"
      }
    },
    {
      "name": "updatePassword",
      "path": "/password/update",
      "realizeFile": "auth",
      "realizeFunction": "updatePassword",
      "method": "post",
      "comment": "修改密码",
      "body": {
        "username": "string|required",
        "newPassword": "string|required",
        "oldPassword": "string|required"
      },
      "res": {
        "code": "number",
        "result": {}
      }
    },
    {
      "name": "resetPassword",
      "path": "/password/reset",
      "realizeFile": "auth",
      "realizeFunction": "resetPassword",
      "method": "post",
      "comment": "重置密码",
      "body": {
        "username": "string|required",
        "password": "string|required"
      },
      "res": {
        "code": "number",
        "result": {}
      }
    },
    {
      "name": "checkPassword",
      "path": "/password/check",
      "realizeFile": "auth",
      "realizeFunction": "checkPassword",
      "method": "post",
      "comment": "校验密码",
      "body": {
        "username": "string|required",
        "password": "string|required"
      },
      "res": {
        "code": "number",
        "result": {
          "isMatch": "boolean"
        }
      }
    },
    {
      "name": "checkToken",
      "path": "/token/check/:token",
      "realizeFile": "auth",
      "realizeFunction": "checkToken",
      "method": "get",
      "comment": "检查登录token",
      "res": {
        "code": "number",
        "result": {
          "isValid": "boolean",
          "accountId": "string"
        }
      },
      "resComment": {
        "accountId": "只有isValid为true时才有值"
      }
    },
    {
      "name": "accountById",
      "path": "/account/id/:id",
      "realizeFile": "auth",
      "realizeFunction": "accountById",
      "method": "get",
      "comment": "根据id获取帐号信息",
      "res": {
        "code": "number",
        "result": {
          "id": "string",
          "username": "string",
          "relatedThirdParty": []
        }
      }
    },
    {
      "name": "accountByUsername",
      "path": "/account/username/:username",
      "realizeFile": "auth",
      "realizeFunction": "accountByUsername",
      "method": "get",
      "comment": "根据username获取帐号信息",
      "res": {
        "code": "number",
        "result": {
          "id": "string",
          "username": "string",
          "relatedThirdParty": []
        }
      }
    },
    {
      "name": "accountIdByToken",
      "path": "/accountId/token/:token",
      "realizeFile": "auth",
      "realizeFunction": "accountIdByToken",
      "method": "get",
      "comment": "根据token获取帐号id",
      "res": {
        "code": "number",
        "result": {
          "accountId": "string"
        }
      }
    },
    {
      "name": "deleteAccountById",
      "path": "/account/delete",
      "realizeFile": "auth",
      "realizeFunction": "deleteAccountById",
      "method": "post",
      "comment": "根据帐号id删除帐号",
      "body": {
        "accountId": "string|required"
      },
      "res": {
        "code": "number",
        "result": {
          "accountId": "string"
        }
      }
    },
    {
      "name": "tokenInfo",
      "path": "/token/:token",
      "realizeFile": "auth",
      "realizeFunction": "tokenInfo",
      "method": "get",
      "comment": "获取token信息",
      "res": {
        "code": "number",
        "result": {
          "accountId": "string",
          "expireTime": "number",
          "token": "string",
          "isTemporary": "boolean"
        }
      }
    }
  ]
}